{% extends '@umio/components/page_two_columns.html.twig' %}

{% block sidebar %}
  {% include '@umio/components/sidebar_register.html.twig' with {
    title: ('Created account'|t),
    steps: {
      1: {
        'active': 'true',
        'done': 'true',
        'icon': 'ph-user-circle',
        'text': ('Account type'|t)
      },
      2: {
        'active': 'true',
        'done': 'true',
        'icon': 'ph-key',
        'text': ('Access data'|t)
      },
      3: {
        'icon': 'ph-user',
        'text': ('Personal data'|t)
      },
      4: {
        'icon': 'ph-hard-drives',
        'text': ('Company'|t)
      },
    }
  } %}
{% endblock %}

{% block content %}
  <div class="side-form-by-step side-form-by-step-four">
    {% include '@umio/components/card-with-cta.html.twig' with {
      title: ('Confirm your email'|t),
      content: ('We have sent a confirmation link to @email'|t({'@email': email})),
      cta: {
        link: '/',
        text: ('Return to home page'|t)
      }
    }%}
  </div>
{% endblock %}
