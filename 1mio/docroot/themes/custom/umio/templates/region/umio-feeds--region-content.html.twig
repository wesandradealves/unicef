{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}

{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
  ]
%}

{% if content %}
  <div{{ attributes.addClass(classes) }}>
    {# Hero Banner opportunities #}
    {{
      include('@umio/components/hero_banner_opportunities.html.twig', {
        image_banner: '/' ~ directory ~ '/images/banner-opportunities.svg',
        image_banner_mobile: '/' ~ directory ~ '/images/banner-opportunities-mobile.svg',
        image_logo: '/' ~ directory ~ '/logo.svg',
        title: ('1 Milion opportunities'|t),
        cta: {
          url: '/register',
          label: ('I want to apply'|t),
        },
      })
    }}
    {{ elements['umio_content'] }}
  </div>
{% endif %}
