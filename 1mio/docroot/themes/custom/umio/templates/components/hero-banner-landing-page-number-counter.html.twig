{% for counter in counters %}
    <div class='session-container'>
      <div class='session-number color-{{ loop.index }}'>{{ counter.total }}</div>
      <div class='session-text'>{{ counter.text }}</div>
    </div>
    {% if loop.index != 5 %}
      <div class='session-line'></div>
    {% endif %}
{% endfor %}

