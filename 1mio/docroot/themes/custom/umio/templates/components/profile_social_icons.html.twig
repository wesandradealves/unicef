{% set socialsUrls = {
  linkedin: 'in/',
  tiktok: '@'
} %}

<div id="profile-social-icons" class="row m-0">
  <div class="col-12 col-md-10 offset-md-1 col-lg-6 offset-lg-3">
    <div class="container d-flex flex-column justify-content-center">
      <ul class="d-flex justify-content-center social-media-links--platforms platforms inline horizontal">
        {% for key, social in socialInfo %}
          {% if (social.value|length) > 0 %}
            <li class="pb-5">
              <a target="#"
                class="social-media-link-icon"
                href="https://www.{{ key }}.com/{{ socialsUrls[key] }}{{
                social.value
                }}">
                <i class="ph-{{ key }}-logo ph-2x"></i>
              </a>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
