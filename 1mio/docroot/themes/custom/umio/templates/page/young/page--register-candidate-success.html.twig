    steps: {
      1: {
        'active': 'true',
        'done': 'true',
        'icon': 'ph-user-circle',
        'text': ('Account type'|t)
      },
      2: {
        'active': 'true',
        'done': 'true',
        'icon': 'ph-key',
        'text': ('Access data'|t)
      },
      3: {
        'active': 'true',
