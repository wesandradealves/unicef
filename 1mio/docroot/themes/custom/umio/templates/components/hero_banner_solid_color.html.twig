{#
/**
 * @file
 * Default theme implementation for a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: Remaining HTML attributes for the element, including:
 *   - class: HTML classes that can be used to style contextually through CSS.
 *
 * @see template_preprocess_region()
 *
 * @ingroup themeable
 */
#}

<style>
  .hero-banner-solid-color {
    border-radius: 0px 0px 40px 0px;
    height: 8.5rem;
    color: {{ font_color }};
    background-color: {{ color }} ;
  }
  .hero-banner-solid-color-container {
    display: flex;
    align-items: center;
    height: 100%;
    color: {{ font_color }};
    background-color: {{ color }};
  }
</style>

<section class="hero-banner-solid-color">
  <div class="hero-banner--edit-profile-row row m-0">
    <div class="hero-banner-solid-color-container col-12 col-md-10 offset-md-1 col-xl-6 offset-xl-3">
      <div class="col-9">
        <h1>{{ title }}</h1>
      </div>
      <div class="col-3 d-flex justify-content-end">
        {% if cta %}
          <a href="{{ cta.url }}" class="banner--solid-color--cta">{{ cta.label }}</a>
        {% endif %}
      <div>
    </div>
  </div>
</section>
